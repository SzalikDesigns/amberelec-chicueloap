<theme>
<formatVersion>7</formatVersion>

    <variables>
	    <fullscreenfixSubsetname>Choose Emulationstation That's In Use</fullscreenfixSubsetname>
		<hidecontrollersSubsetname>Hide Controllers</hidecontrollersSubsetname>
    </variables>

	<subset name="fullscreenfix" displayName="${fullscreenfixSubsetname}">
        <include name="ES Header" displayName="${ES Header}">./header.xml</include>
    </subset>
	
		<subset name="hidecontrollers" displayName="${hidecontrollersSubsetname}">
        <include name="no" displayName="${no}"/>
        <include name="yes" displayName="${yes}">./hide.xml</include>
    </subset>
	
	<view name="menu">
	
    <menuBackground name="menubg">
      <color>F8F8F8</color>
    </menuBackground>
	
	<menuText name="menutext, menutitle">
      <fontPath>./_assets/Roboto-Medium.ttf</fontPath>
      <fontSize>.039</fontSize>
      <color>818181</color> 
    </menuText>
	
	<menuText name="menufooter, menutextsmall">
      <fontPath>./_assets/Roboto-Medium.ttf</fontPath>
      <fontSize>.029</fontSize>		 
      <color>818181</color>
    </menuText>
    </view>
 

</theme>
